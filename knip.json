{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "ignore": ["packages/*/build.{js,ts,mjs}", "**/*.example.ts"],
  "ignoreDependencies": [
    "@commitlint/cli",
    "@effect/language-service",
    "@effect/platform",
    "eslint-plugin-*",
    "fast-check",
    "npm",
    "@codeforbreakfast/eslint-effect"
  ],
  "ignoreBinaries": ["publish"],
  "workspaces": {
    "packages/eslint-test-rules": {
      "entry": ["src/**/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/eslint-effect": {
      "entry": ["src/index.js", "test/**/*.ts"],
      "project": ["src/**/*.js", "test/**/*.ts"]
    },
    "packages/*": {
      "entry": ["src/index.{ts,js,mjs}"],
      "project": ["src/**/*.{ts,js,mjs}!"]
    }
  }
}
