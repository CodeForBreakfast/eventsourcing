{
  "name": "@codeforbreakfast/eventsourcing-example-todo",
  "version": "0.1.4",
  "type": "module",
  "private": true,
  "exports": {
    ".": {
      "import": "./src/cli.ts"
    }
  },
  "scripts": {
    "demo": "bun src/cli.ts",
    "server": "bun src/server.ts",
    "build": "bun build src/frontend/client.ts --outdir public --minify --target browser",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit && tsc --project tsconfig.frontend.json --noEmit",
    "validate:docs": "bun ../../scripts/validate-markdown-examples.ts"
  },
  "dependencies": {
    "@codeforbreakfast/eventsourcing-aggregates": "workspace:*",
    "@codeforbreakfast/eventsourcing-projections": "workspace:*",
    "@codeforbreakfast/eventsourcing-protocol": "workspace:*",
    "@codeforbreakfast/eventsourcing-store": "workspace:*",
    "@codeforbreakfast/eventsourcing-store-filesystem": "workspace:*",
    "@codeforbreakfast/eventsourcing-transport": "workspace:*",
    "@codeforbreakfast/eventsourcing-transport-websocket": "workspace:*",
    "@effect/cli": "0.71.0",
    "@effect/platform": "0.92.1",
    "@effect/platform-bun": "0.81.1",
    "effect": "3.18.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/bun": "latest"
  }
}
