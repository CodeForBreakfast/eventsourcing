{
  "name": "@codeforbreakfast/bun-test-effect",
  "version": "0.4.0",
  "type": "module",
  "license": "MIT",
  "author": "CodeForBreakfast",
  "description": "Testing utilities for Effect with Bun, providing effect-native test runners and assertions (adapted from @effect/vitest)",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeForBreakfast/eventsourcing.git",
    "directory": "packages/bun-test-effect"
  },
  "keywords": [
    "bun",
    "bun-test",
    "effect",
    "effect-ts",
    "testing",
    "test-runner",
    "functional-programming",
    "typescript"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./src/index.ts",
    "./eslint": "./src/eslint/index.js"
  },
  "files": [
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Using root lint config'",
    "test": "bun test",
    "validate:pack": "bun pm pack --dry-run",
    "check:publishable": "npm view $npm_package_name@$npm_package_version version >/dev/null 2>&1 && exit 1 || exit 0",
    "validate:docs": "bun ../../scripts/validate-markdown-examples.ts"
  },
  "peerDependencies": {
    "effect": ">=3.0.0"
  },
  "devDependencies": {
    "effect": "3.18.4"
  }
}
