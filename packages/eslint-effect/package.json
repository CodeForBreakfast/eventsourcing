{
  "name": "@codeforbreakfast/eslint-effect",
  "version": "0.8.4",
  "description": "ESLint rules and configurations for Effect projects enforcing functional programming best practices",
  "type": "module",
  "license": "MIT",
  "author": "CodeForBreakfast",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeForBreakfast/eventsourcing.git",
    "directory": "packages/eslint-effect"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "effect",
    "effect-ts",
    "functional-programming",
    "typescript",
    "linting"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./src/index.js",
    "./rules": "./src/rules/index.js",
    "./configs": "./src/configs.js"
  },
  "files": [
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint test --ext .ts,.tsx --report-unused-disable-directives",
    "lint:fix": "eslint test --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "bun run lint && bun run typecheck",
    "validate:pack": "bun pm pack --dry-run",
    "validate:docs": "bun ../../scripts/validate-markdown-examples.ts",
    "check:publishable": "npm view $npm_package_name@$npm_package_version version >/dev/null 2>&1 && exit 1 || exit 0"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "devDependencies": {
    "eslint": "9.39.1",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "typescript": "5.9.3",
    "effect": "3.19.9"
  }
}
