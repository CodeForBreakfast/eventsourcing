{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "all": {
      "dependsOn": ["lint", "test", "build"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": ["tsconfig.tsbuildinfo"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig*.json", "package.json"]
    },
    "check": {
      "dependsOn": ["^check", "typecheck"]
    },
    "build": {
      "outputs": ["dist/**", "*.tsbuildinfo"],
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig*.json", "package.json", "build.ts"]
    },
    "deps:check": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "package.json", "knip.json", ".knip.json"]
    },
    "lint": {
      "dependsOn": ["check", "^lint"],
      "outputs": [],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "*.config.js",
        "*.config.ts",
        "tsconfig*.json",
        ".eslintrc*",
        "package.json"
      ]
    },
    "test": {
      "dependsOn": ["^test", "lint", "deps:check"],
      "outputs": [],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "**/*.test.ts",
        "**/*.spec.ts",
        "vitest.config.*",
        "package.json"
      ],
      "env": [
        "TEST_PG_USERNAME",
        "TEST_PG_PASSWORD",
        "TEST_PG_DATABASE",
        "TEST_PG_HOST",
        "TEST_PG_PORT"
      ]
    },
    "publish:package": {
      "dependsOn": ["build"],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
